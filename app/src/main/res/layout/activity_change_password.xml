<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#23b4c5"
    tools:context="com.kyuubi.gr.ChangePasswordActivity">

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="59dp"
        android:layout_marginLeft="42dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/style_edit_text"
        android:textColorHint="#23b45c"
        android:textColor="#23b4c5"
        android:paddingLeft="20dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/etNewpass"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="New Password"
        android:inputType="textPassword"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/etPassword"
        android:layout_marginLeft="42dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/style_edit_text"
        android:textColorHint="#23b45c"
        android:textColor="#23b4c5"
        android:paddingLeft="20dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/etCofirm"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="47dp"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNewpass"
        android:background="@drawable/style_edit_text"
        android:textColorHint="#23b45c"
        android:textColor="#23b4c5"
        android:paddingLeft="20dp"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/bChangePass"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="43dp"
        android:text="Change Password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCofirm"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="#ec6a6b"/>
</android.support.constraint.ConstraintLayout>
