<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#23b4c5"
    tools:context="com.kyuubi.gr.AddHomeworkActivity">

    <Spinner
        android:id="@+id/sClassid"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="42dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/etContent"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:paddingLeft="20dp"
        android:ems="10"
        android:textColor="#23b4c5"
        android:textSize="20sp"
        android:inputType="textMultiLine"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/sClassid"
        android:layout_marginLeft="42dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/style_edit_text" />

    <Button
        android:id="@+id/bAddHomework"
        android:layout_width="300dp"
        android:layout_height="58dp"
        android:layout_marginTop="28dp"
        android:text="Add HomeWork"
        app:layout_constraintTop_toBottomOf="@+id/etContent"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="#ec6a6b"
        android:layout_marginLeft="42dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
