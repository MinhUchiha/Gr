<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kyuubi.gr.AdminMainActivity">

    <ImageButton
        android:id="@+id/ibUserManager"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:srcCompat="@mipmap/ic_launcher_round"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="6dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="0dp"
        android:text="User Manager"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibUserManager" />

    <ImageButton
        android:id="@+id/ibClassManager"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/holo_blue_bright"
        app:layout_constraintLeft_toRightOf="@+id/ibUserManager"
        android:layout_marginLeft="21dp" />

    <ImageButton
        android:id="@+id/ibUser"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:srcCompat="@android:drawable/btn_star_big_on"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toRightOf="@+id/ibClassManager"
        android:layout_marginLeft="22dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="User Profile"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/ibUser" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="Class Manager"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/ibClassManager"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="21dp" />

</android.support.constraint.ConstraintLayout>
