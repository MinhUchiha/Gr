<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#23b4c5"

    tools:context="com.kyuubi.gr.AddPointActivity">

    <Spinner
        android:id="@+id/sClassid"
        android:layout_width="360dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="59dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/etLearner"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:paddingLeft="20dp"
        android:ems="10"
        android:hint="Add member"
        android:textSize="20dp"
        android:textColorHint="#23b45c"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/sClassid"
        android:background="@drawable/style_edit_text"/>

    <EditText
        android:id="@+id/etPoint"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="25dp"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:ems="10"
        android:hint="Add point"
        android:textColorHint="#23b45c"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etLearner"
        android:layout_marginStart="8dp"
        android:background="@drawable/style_edit_text"        />

    <Button
        android:id="@+id/bAddPoint"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="42dp"
        android:text="Add Point"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="#ec6a6b"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPoint"
        android:layout_marginStart="8dp" />
</android.support.constraint.ConstraintLayout>
