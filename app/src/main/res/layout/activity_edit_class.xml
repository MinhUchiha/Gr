<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kyuubi.gr.EditClassActivity">

    <EditText
        android:id="@+id/etClassid"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Classid"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="17dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/etCLassName"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Class name"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/etClassid"
        android:layout_marginLeft="17dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/etSetember"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Setember"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/etCLassName"
        android:layout_marginLeft="17dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/etTime"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:hint="Time"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/etSetember"
        android:layout_marginLeft="17dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/bEditClass"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="Edit Class"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/etTeacher"
        android:layout_marginLeft="17dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/etTeacher"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Teacher"
        android:inputType="textPersonName"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/etTime"
        android:layout_marginLeft="17dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
